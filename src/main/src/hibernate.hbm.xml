<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Entities.AvoirEntity" table="avoir">

        <id name="idComp" type="java.lang.Integer" column="ID">
            <generator class="identity" />
        </id>

        <property name="idComp" column="id_comp"/>
        <property name="idUser" column="id_user"/>

    </class>
    <class name="Entities.UserEntity" table="user">

        <id name="idUser" type="java.lang.Integer" column="ID">
            <generator class="identity" />
        </id>

        <property name="usernameUser" column="username_user"/>
        <property name="passwordUser" column="password_user"/>

    </class>
</hibernate-mapping>